<% include partials/header %>

<div class="ui main text container">
	<div class="ui huge header">Blogs</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blogs.forEach(function(blog) { %>
				<div class="item">
					<div class="image">
						<img class="thumbnail" src="<%= blog.image %>" alt="" />
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%= blog._id %>"><h2><%= blog.title %></h2></a>
						<div class="meta">
							<span><%= blog.created.toDateString() %></span>
						</div>
						<div class="description">
							<p><%- blog.body.substring(0,70) %>...</p>
						</div>
						<div class="extra">
							<a class="ui floated basic blue button" href="/blogs/<%= blog._id %>">Read More<i class="right chevron icon"></i></a>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</div>

<% include partials/footer %>